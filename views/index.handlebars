<div class="container bg">
	
	<div class="row">
	    <div class="center col-sm-12">
			<img src="assets/img/burger.png" alt="Eat-Da-Burger">
	        <h1>CheeseBurgers</h1>
	        <p></p>
	    </div>
  	</div>


	<div class="row">
	    <div class="col-sm-6">
			<br>
			<h2>Burgers Ready</h2>
			<ul>
			  {{#each burgers}}
			    {{#unless this.devoured}}
			      <li>
			      	{{this.id}}
			        {{this.burger_name}}
			        <form action="/{{this.id}}?_method=PUT" method="POST">
			          <input type="hidden" name="devoured" value="true">
			          <button class="btn-primary" type="submit">Get it</button>
			        </form>
			      </li>
			    {{/unless}}
			  {{/each}}
			</ul>
	    </div>

	    <div class="col-sm-6">
			<h2>Ordered Burgers</h2>			
			  {{#each burgers}}
			    {{#if this.devoured}}
			      <li>
			      	{{this.id}}
			        {{this.burger_name}}
			      </li>
			    {{/if}}
			  {{/each}}			
	    </div>
  	</div>


	<div class="row">
	    <div class="center col-sm-12">
			<h2>Create a Burger</h2>
			<form class="create-update-form" action="/" method="POST">
			  <div class="form-group">
			    <p>Type in the Burger and hit submit</p>
			    <input type="text" id="ca" name="burger_name">
			  </div>
			  <button class="btn-primary" type="submit">Submit</button>
			</form>
	    </div>	
  	</div>
</div>